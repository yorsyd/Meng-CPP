#include<iostream>
using namespace std;

int main(){
// Langkah Praktikum No.9
	int i,j,k,n;
	cout << "Jumlah baris: "; cin >> n;
	for(i=0;i<n;i++){
		for(j=1;j<=n-i;j++){
			cout << " ";
		}
		for (k=1;k<=i;k++){
			cout << k;
		}
		for (k-1;k>=1;k--) {
			cout << k;
		}
	cout << endl;
	}
	
	for(i=n-1;i>0;i--){
		for(j=1+n-i;j>0;j--){
			cout << " ";
		}
		for(k=1;k<i;k++){
			cout << k;
		}
		for(k-1;k>=1;k--){
			cout << k;
		}
	cout << endl;
	}
} 
