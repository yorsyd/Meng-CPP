// Langkah No.7 || Pada program ini hanya bisa input satu kata
#include<iostream>
using namespace std;

int main()
{
	char name[50]; // char disini juga bisa diganti dengan string, terus [50] dihapus saja

	cout << "Silahkan masukkan nama anda : ";
	cin >> name;
	cout << "Namamu adalah : " << name;
		
	return 0;
}
